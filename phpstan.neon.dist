includes: []

parameters:
  # Use the highest level for strictness; adjust if needed.
  level: max

  # Analyse only project source code
  paths:
    - src

  # Autoload Composer to make classes available to PHPStan
  bootstrapFiles:
    - vendor/autoload.php

  # Exclude generated or vendor code from analysis explicitly (defensive)
  excludePaths:
    - vendor
    - doctrine
    - www

  # Suppress warnings for Doctrine-managed id properties which are populated at runtime
  ignoreErrors:
    -
      message: '#Property .*::\$id is never written, only read#'
      paths:
        - src/Models/*

  # Treat mixed more strictly in future if desired
  reportUnmatchedIgnoredErrors: true
